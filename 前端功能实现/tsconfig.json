{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "module": "esnext",
    "jsx": "preserve",
    "sourceMap": true,
    "noEmit": true,
    "skipLibCheck": true, // 不检查
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/untils/baiduMap.js",
    "src/untils/debuonce.js",
    "**/*.ts",
    "**/*.tsx",
    "../typeScript/module.d.ts",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}